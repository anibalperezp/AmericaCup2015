<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center|top"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <AbsoluteLayout
        android:id="@+id/absoluteLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:paddingTop="0dp" >

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="0dp"
            android:layout_y="0dp"
            android:scrollbars="none" >

            <AbsoluteLayout
                android:id="@+id/absoluteLayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="320dp"
                    android:layout_height="512dp"
                    android:src="@drawable/p_principal" />
                
                <TextView
                    android:id="@+id/textView_version"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:layout_x="240dp"
                    android:layout_y="3dp"
                    android:gravity="right"
                    android:text="Demo"
                    android:textColor="#ff0000"
                    android:textSize="14dp"
                    android:textStyle="normal|bold" />

                <Button
                    android:id="@+id/button1"
                    android:layout_width="107dp"
                    android:layout_height="33dp"
                    android:layout_x="0dp"
                    android:layout_y="102dp"
                    android:background="@drawable/btn_calendario" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="115dp"
                    android:layout_height="33dp"
                    android:layout_x="0dp"
                    android:layout_y="143dp"
                    android:background="@drawable/btn_estadistic" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="161dp"
                    android:layout_height="99dp"
                    android:layout_x="145dp"
                    android:layout_y="77dp"
                    android:background="@drawable/btn_grupoa" />

                <Button
                    android:id="@+id/button4"
                    android:layout_width="152dp"
                    android:layout_height="99dp"
                    android:layout_x="16dp"
                    android:layout_y="215dp"
                    android:background="@drawable/btn_grupob" />

                <Button
                    android:id="@+id/button5"
                    android:layout_width="90dp"
                    android:layout_height="33dp"
                    android:layout_x="230dp"
                    android:layout_y="281dp"
                    android:background="@drawable/btn_news" />

                <Button
                    android:id="@+id/button6"
                    android:layout_width="121dp"
                    android:layout_height="33dp"
                    android:layout_x="199dp"
                    android:layout_y="240dp"
                    android:background="@drawable/btn_fase2" />

                <Button
                    android:id="@+id/button7"
                    android:layout_width="159dp"
                    android:layout_height="103dp"
                    android:layout_x="149dp"
                    android:layout_y="353dp"
                    android:background="@drawable/btn_grupoc" />

                <Button
                    android:id="@+id/button8"
                    android:layout_width="117dp"
                    android:layout_height="33dp"
                    android:layout_x="0dp"
                    android:layout_y="423dp"
                    android:background="@drawable/btn_contac" />

                

            </AbsoluteLayout>
        </ScrollView>
    </AbsoluteLayout>

</AbsoluteLayout>